rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write files in jobFiles directory
    match /jobFiles/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow public read access for job files (since they're shared via email)
    // But restrict write access to authenticated users only
    match /jobFiles/{fileName} {
      allow read: if true;
      allow write: if request.auth != null &&
        request.resource.size < 10 * 1024 * 1024 && // 10MB limit
        request.resource.contentType.matches('application/(pdf|msword|vnd.openxmlformats-officedocument.wordprocessingml.document)|image/.*|text/.*');
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}